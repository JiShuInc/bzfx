<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cardinal.tech.bzfx.dao.JcSpecialRyDao">

    <resultMap id="BaseResultMap" type="com.cardinal.tech.bzfx.entity.JcSpecialRy">
        <!--@Table jc_special_ry-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="sid" column="sid" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
        <result property="creatAt" column="creat_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, sid, rid, creat_at
        from bzfx.jc_special_ry
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, sid, rid, creat_at
        from bzfx.jc_special_ry
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, sid, rid, creat_at
        from bzfx.jc_special_ry
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="sid != null">
                and sid = #{sid}
            </if>
            <if test="rid != null">
                and rid = #{rid}
            </if>
            <if test="creatAt != null">
                and creat_at = #{creatAt}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bzfx.jc_special_ry(sid, rid, creat_at)
        values (#{sid}, #{rid}, #{creatAt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bzfx.jc_special_ry
        <set>
            <if test="sid != null">
                sid = #{sid},
            </if>
            <if test="rid != null">
                rid = #{rid},
            </if>
            <if test="creatAt != null">
                creat_at = #{creatAt},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from bzfx.jc_special_ry where id = #{id}
    </delete>

    <!--查询指定行数据-->
    <select id="groupBy" resultType="map">
           select
              ${field},count(1) c
            from bzfx.jc_special_ry
            group by ${field}
    </select>

    <!-- 分页查询 -->
    <select id="queryPageJcSpecialRyList" resultMap="BaseResultMap">
            select
                id, sid, rid, creat_at            
            from bzfx.jc_special_ry
            <trim prefix="where" prefixOverrides="and|or">
                               <if test="obj.id != null">
                        and id = #{obj.id}
                   </if>
                               <if test="obj.sid != null">
                        and sid = #{obj.sid}
                   </if>
                               <if test="obj.rid != null">
                        and rid = #{obj.rid}
                   </if>
                               <if test="obj.creatAt != null">
                        and creat_at = #{obj.creatAt}
                   </if>
                        </trim>
    </select>

</mapper>