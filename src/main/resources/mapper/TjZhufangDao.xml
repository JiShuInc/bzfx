<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cardinal.tech.bzfx.dao.TjZhufangDao">

    <resultMap id="BaseResultMap" type="com.cardinal.tech.bzfx.entity.TjZhufang">
        <!--@Table tj_zhufang-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="did" column="did" jdbcType="VARCHAR"/>
        <result property="ryid" column="ryid" jdbcType="INTEGER"/>
        <result property="dwid" column="dwid" jdbcType="INTEGER"/>
        <result property="zhufangsx" column="zhufangsx" jdbcType="INTEGER"/>
        <result property="jinzhusj" column="jinzhusj" jdbcType="TIMESTAMP"/>
        <result property="creatAt" column="creat_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, did, ryid, dwid, zhufangsx, jinzhusj, creat_at
        from bzfx.tj_zhufang
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, did, ryid, dwid, zhufangsx, jinzhusj, creat_at
        from bzfx.tj_zhufang
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, did, ryid, dwid, zhufangsx, jinzhusj, creat_at
        from bzfx.tj_zhufang
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="did != null and did != ''">
                and did = #{did}
            </if>
            <if test="ryid != null">
                and ryid = #{ryid}
            </if>
            <if test="dwid != null">
                and dwid = #{dwid}
            </if>
            <if test="zhufangsx != null">
                and zhufangsx = #{zhufangsx}
            </if>
            <if test="jinzhusj != null">
                and jinzhusj = #{jinzhusj}
            </if>
            <if test="creatAt != null">
                and creat_at = #{creatAt}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bzfx.tj_zhufang(did, ryid, dwid, zhufangsx, jinzhusj, creat_at)
        values (#{did}, #{ryid}, #{dwid}, #{zhufangsx}, #{jinzhusj}, #{creatAt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bzfx.tj_zhufang
        <set>
            <if test="did != null and did != ''">
                did = #{did},
            </if>
            <if test="ryid != null">
                ryid = #{ryid},
            </if>
            <if test="dwid != null">
                dwid = #{dwid},
            </if>
            <if test="zhufangsx != null">
                zhufangsx = #{zhufangsx},
            </if>
            <if test="jinzhusj != null">
                jinzhusj = #{jinzhusj},
            </if>
            <if test="creatAt != null">
                creat_at = #{creatAt},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from bzfx.tj_zhufang where id = #{id}
    </delete>

    <!--查询指定行数据-->
    <select id="groupBy" resultType="map">
           select
              ${field},count(1) c
            from bzfx.tj_zhufang
            group by ${field}
    </select>

    <!-- 分页查询 -->
    <select id="queryPageTjZhufangList" resultMap="BaseResultMap">
            select
                id, did, ryid, dwid, zhufangsx, jinzhusj, creat_at            
            from bzfx.tj_zhufang
            <trim prefix="where" prefixOverrides="and|or">
                               <if test="obj.id != null">
                        and id = #{obj.id}
                   </if>
                               <if test="obj.did != null and obj.did != ''">
                        and did = #{obj.did}
                   </if>
                               <if test="obj.ryid != null">
                        and ryid = #{obj.ryid}
                   </if>
                               <if test="obj.dwid != null">
                        and dwid = #{obj.dwid}
                   </if>
                               <if test="obj.zhufangsx != null">
                        and zhufangsx = #{obj.zhufangsx}
                   </if>
                               <if test="obj.jinzhusj != null">
                        and jinzhusj = #{obj.jinzhusj}
                   </if>
                               <if test="obj.creatAt != null">
                        and creat_at = #{obj.creatAt}
                   </if>
                        </trim>
    </select>

</mapper>