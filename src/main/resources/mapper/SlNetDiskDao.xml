<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cardinal.tech.bzfx.dao.SlNetDiskDao">

    <resultMap id="BaseResultMap" type="com.cardinal.tech.bzfx.entity.SlNetDisk">
        <!--@Table sl_net_disk-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userid" column="userid" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="fileid" column="fileid" jdbcType="INTEGER"/>
        <result property="filename" column="filename" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="creatAt" column="creat_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, userid, username, fileid, filename, url, creat_at
        from bzfx.sl_net_disk
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, userid, username, fileid, filename, url, creat_at
        from bzfx.sl_net_disk
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, userid, username, fileid, filename, url, creat_at
        from bzfx.sl_net_disk
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userid != null">
                and userid = #{userid}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="fileid != null">
                and fileid = #{fileid}
            </if>
            <if test="filename != null and filename != ''">
                and filename = #{filename}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="creatAt != null">
                and creat_at = #{creatAt}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bzfx.sl_net_disk(userid, username, fileid, filename, url, creat_at)
        values (#{userid}, #{username}, #{fileid}, #{filename}, #{url}, #{creatAt})
    </insert>
    
    <!--新增所有列-->
    <insert id="insertIgnore" keyProperty="id" useGeneratedKeys="true">
        insert ignore into bzfx.sl_net_disk(userid, username, fileid, filename, url, creat_at)
        values (#{userid}, #{username}, #{fileid}, #{filename}, #{url}, #{creatAt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bzfx.sl_net_disk
        <set>
            <if test="userid != null">
                userid = #{userid},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="fileid != null">
                fileid = #{fileid},
            </if>
            <if test="filename != null and filename != ''">
                filename = #{filename},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="creatAt != null">
                creat_at = #{creatAt},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from bzfx.sl_net_disk where id = #{id}
    </delete>

    <!--查询指定行数据-->
    <select id="groupBy" resultType="map">
           select
              ${field},count(1) c
            from bzfx.sl_net_disk
            group by ${field}
    </select>

    <!-- 分页查询 -->
    <select id="queryPageSlNetDiskList" resultMap="BaseResultMap">
            select
                id, userid, username, fileid, filename, url, creat_at            
            from bzfx.sl_net_disk
            <trim prefix="where" prefixOverrides="and|or">
                               <if test="obj.id != null">
                        and id = #{obj.id}
                   </if>
                               <if test="obj.userid != null">
                        and userid = #{obj.userid}
                   </if>
                               <if test="obj.username != null and obj.username != ''">
                        and username = #{obj.username}
                   </if>
                               <if test="obj.fileid != null">
                        and fileid = #{obj.fileid}
                   </if>
                               <if test="obj.filename != null and obj.filename != ''">
                        and filename = #{obj.filename}
                   </if>
                               <if test="obj.url != null and obj.url != ''">
                        and url = #{obj.url}
                   </if>
                               <if test="obj.creatAt != null">
                        and creat_at = #{obj.creatAt}
                   </if>
                        </trim>
    </select>

</mapper>